<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Ecommerce</title>
    <link rel="shortcut icon" href="https://cdn-icons-png.freepik.com/256/2586/2586485.png?ga=GA1.1.1140899860.1699255574&" type="image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
    <%- include('header'); -%>
   <section id="product" class="text-center">
        <h1>Products</h1>
        <div class="d-flex align-items-center justify-content-evenly flex-wrap gap-4 ">
            <% data.forEach(item=> {%>
                <div class="card " style="width: 20rem;">
                    <img src="<%= item.images[0] %>" class="card-img-top" alt="..."/>
                    <div class="card-body">
                      <h5 class="card-title"><%= item.title %></h5>
                      <p class="card-text"><%= item.description %></p>
                      <p class="card-text">â‚¹<%= item.price %></p>
                      <a href="/product/<%= item.id%>" class="btn btn-primary">Purchase</a>
                    </div>
                  </div>
                <%}) %>
        </div>
   </section>
   <%- include('footer'); -%>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>